{
    "name": "My Fourth Extension",
    "version": "0.1",
    "manifest_version": 2,
    
    "description": "今いるページの背景色を変えるよ！ with option page",
 
    "permissions": [
        "tabs", "http://*/*"
    ],
    
    "options_page" : "option.html",
    
    "background": {
        "scripts": ["background.js"]
    },
 
    "browser_action": {
        "default_icon": "n0bisuke.jpg",
        "default_title": "My Fourth Extension"
    }
}